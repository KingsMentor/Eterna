<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#3b96bb" android:endColor="#3b96bb" android:angle="90.0" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <gradient android:startColor="#acdff3" android:endColor="#7fc7e5" android:angle="90.0" android:centerColor="#076991" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:startColor="#076991" android:endColor="#076991" android:angle="90.0" />
        </shape>
    </item>
</selector>